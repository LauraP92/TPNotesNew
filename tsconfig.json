{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "*.js"
  ],
  "include": [
    ".eslintrc.js",
    "./src/**/*",
    "./src/hooks/**/*",
    "./app.js",
    "./index.js",
    "./config/**/*",
    "./env.js",
    "./env.ts",
    "./babel.config.js",
    "./jest.config.js",
    "index.js",
    "global.d.ts"
  ],
  "files": ["*.ts/*.tsx"]
}